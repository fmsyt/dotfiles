[color]
	ui = true
[core]
	autocrlf = input
	quotepath = false
	editor = vim
[pull]
	ff = only
[fetch]
	prune = true
[alias]
	st = status
	df = diff
	dt = difftool
	cm = commit
	br = branch
	ps = push
	pl = pull
	co = checkout
	mt = mergetool
	tree = log --graph --pretty=format:'%x09%C(auto) %h %Cgreen %ar %Creset%x09by"%C(cyan ul)%an%Creset" %x09%C(auto)%s %d'
[credential]
	helper = cache --timeout=86400
[diff]
	tool = vim
[difftool]
	prompt = false
[difftool "code"]
	cmd = code --wait --diff $LOCAL $REMOTE
[difftool "vim"]
	cmd = vim -d $LOCAL $REMOTE
[merge]
	conflictstyle = diff3
	ff = false
	prompt = false
	tool = vimdiff
[mergetool "code"]
	cmd = code --wait $MERGED
[init]
	defaultBranch = master
